@model CountsViewModel
<form action="/home/countletters">
    <div class="row">
        <div class="col-md-8 offset-md-1">
            <input type="text" placeholder="Enter some text..." value="@Model.Text" class="form-control" name="text" />
        </div>
        <div class="col-md-2">
            <button class="btn btn-primary btn-block">Submit</button>
        </div>
    </div>
</form>

@foreach (KeyValuePair<char, int> kvp in Model.Counts)
{
    <h3>There are @kvp.Value @(kvp.Key)'s</h3>
}